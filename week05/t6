#include "stdafx.h"
#include <iostream>
using namespace std;

int main()
{
	int n; //redove
	cout << "Enter a number" << ' ';
	cin >> n;
	int container = 1; //zapazvam stoinostta
	for (int i = 1; i <= n; i++) {
		for (int j = 1; j <= i; j++) {
			cout << container << ' ';
			container++;
		}
		cout << endl;
	}

	system("PAUSE");
    return 0;
}
